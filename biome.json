{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": true,
  "files": {
    "includes": [
      "src/**/*",
      "*.{ts,json,html}",
      "!docs/",
      "!package-lock.json",
      "!node_modules",
      "!dist"
    ]
  },
  "vcs": {
    "clientKind": "git"
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
